<h1>Let's play some Countdown!</h1>

<h2>Here's your letters</h2>
<h5><%= @grid.join(' | ') %></h5>

<form action="/score">
  <input type="text" name="clueless" placeholder="Your word here">
  <input type="hidden" name="grid_string" value="<%= @grid.join %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="submit">
</form>
